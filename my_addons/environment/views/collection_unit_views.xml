<odoo>
<!-- Form View -->
    <record id="view_collectionunit_form" model="ir.ui.view">
        <field name="name">env.collectionunit.form</field>
        <field name="model">env.collectionunit</field>
        <field name="arch" type="xml">
            <form string="Đơn vị thu gom">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="manager_id"/>
                            <field name="phone"/>
                            <field name="email"/>
                        </group>
                        <group>
                            <field name="location_ids" widget="many2many_tags"/>
                            <field name="status"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- List View -->
    <record id="view_collectionunit_list" model="ir.ui.view">
        <field name="name">env.collectionunit.list</field>
        <field name="model">env.collectionunit</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="manager_id"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="location_ids" widget="many2many_tags"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <!-- Action -->
    <record id="action_collectionunit" model="ir.actions.act_window">
        <field name="name">Đơn vị thu gom</field>
        <field name="res_model">env.collectionunit</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p>Quản lý thông tin các đơn vị thu gom và khu vực phụ trách.</p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_collectionunit" name="Đơn vị thu gom"
              parent="menu_unit_root" action="action_collectionunit"/>

</odoo>