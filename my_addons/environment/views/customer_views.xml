<odoo>
    <record id="view_customer_form" model="ir.ui.view">
        <field name="name">env.customer.form</field>
        <field name="model">env.customer</field>
        <field name="arch" type="xml">
            <form string="Customer">
                <sheet>
                    <group string="Thông tin khách hàng">
                        <field name="name"/>
                        <field name="customer_type"/>
                        <field name="house_type"/>
                        <field name="waste_classification"/>
                        <field name="phone"/>
                        <field name="email"/>
                        <field name="cccd"/>
                    </group>
                    <group string="Thông tin địa chỉ">
                        <field name="house_number"/>
                        <field name="street"/>
                        <field name="location_id" options="{'no_create': True}"/>
                        <field name="full_path" readonly="1"/>
                        <field name="description"/>
                    </group>
                    <group string="Đơn vị thu gom quản lý">
                        <field 
                            name="collection_unit_id" 
                            options="{'no_create': True}" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_customer_list" model="ir.ui.view">
        <field name="name">env.customer.list</field>
        <field name="model">env.customer</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="customer_type"/>
                <field name="house_type"/>
                <field name="waste_classification"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="location_id"/>
                <field name="full_path"/>
            </list>
        </field>
    </record>

    <record id="action_customer" model="ir.actions.act_window">
        <field name="name">Khách hàng</field>
        <field name="res_model">env.customer</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p>Quản lý thông tin khách hàng</p>
        </field>
    </record>

    <menuitem id="menu_customer" name="Khách hàng" parent="menu_customer_root" action="action_customer"/>
</odoo>
