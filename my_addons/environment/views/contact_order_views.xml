<odoo>
    <!-- Form View -->
    <record id="view_contract_order_form" model="ir.ui.view">
        <field name="name">env.contract.order.form</field>
        <field name="model">env.contract.order</field>
        <field name="arch" type="xml">
            <form string="Contract Order">
                <sheet>
                    <group>
                        <group>
                            <field name="contract_id"/>
                            <field name="months_paid"/>
                        </group>
                        <group>
                            <field name="total_amount" readonly="1"/>
                            <field name="create_uid" invisible="1"/>
                            <field name="create_date" invisible="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="view_contract_order_list" model="ir.ui.view">
        <field name="name">env.contract.order.list</field>
        <field name="model">env.contract.order</field>
        <field name="arch" type="xml">
            <list string="Contract Orders">
                <field name="contract_id"/>
                <field name="months_paid"/>
                <field name="total_amount"/>
                <field name="create_date"/>
            </list>
        </field>
    </record>

    <!-- Action -->
    <record id="action_contract_order" model="ir.actions.act_window">
        <field name="name">Contract Orders</field>
        <field name="res_model">env.contract.order</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_contract_order" name="Hóa đơn" parent="menu_contract_root" action="action_contract_order"/>
</odoo>
