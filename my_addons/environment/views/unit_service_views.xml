<odoo>
    <!-- Form thêm, sửa liên kết Đơn vị - Dịch vụ -->
    <record id="view_unitservice_form" model="ir.ui.view">
        <field name="name">env.unitservice.form</field>
        <field name="model">env.unitservice</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="collection_unit_id" options="{'no_create': True}"/>
                        <field name="service_id" options="{'no_create': True}"/>
                        <field name="status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List view liên kết -->
    <record id="view_unitservice_list" model="ir.ui.view">
        <field name="name">env.unitservice.list</field>
        <field name="model">env.unitservice</field>
        <field name="arch" type="xml">
            <list>
                <field name="collection_unit_id"/>
                <field name="service_id"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <!-- Action -->
    <record id="action_unitservice" model="ir.actions.act_window">
        <field name="name">Liên kết Đơn vị - Dịch vụ</field>
        <field name="res_model">env.unitservice</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p>Quản lý liên kết giữa đơn vị thu gom và dịch vụ.</p>
        </field>
    </record>

    <!-- Menuitem cùng parent với menu_service -->
    <menuitem id="menu_unitservice" name="Liên kết Đơn vị - Dịch vụ"
              parent="menu_service_root"
              action="action_unitservice"/>
</odoo>