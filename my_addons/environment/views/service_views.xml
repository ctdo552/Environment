<odoo>
    <!-- Form thêm, sửa -->
    <record id="view_service_form" model="ir.ui.view">
        <field name="name">env.service.form</field>
        <field name="model">env.service</field>
        <field name="arch" type="xml">
        <form>
            <sheet>
            <group>
                <!-- Field bình thường -->
                <field name="name"/>
                <field name="description"/>
                <field name="status"/>
                <field name="scope"/>
                <field name="groupservice_id" options="{'no_create': True}"/>
            </group>
            </sheet>
        </form>
        </field>
    </record>

    <!-- List view -->
    <record id="view_service_list" model="ir.ui.view">
    <field name="name">env.service.list</field>
    <field name="model">env.service</field>
    <field name="arch" type="xml">
        <list>
        <field name="name"/>
        <field name="code"/>
        <field name="status"/>
        <field name="groupservice_id"/>
        </list>
    </field>
    </record>

    <!-- Action -->
    <record id="action_service" model="ir.actions.act_window">
        <field name="name">Dịch vụ</field>
        <field name="res_model">env.service</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p>Quản lý bảng dịch vụ</p>
        </field>
    </record>

    <menuitem id="menu_service" name="Dịch vụ" parent="menu_service_root" action="action_service"/>
</odoo>