<odoo>

    <!-- Form thêm/sửa cho env.location -->
    <record id="view_location_form" model="ir.ui.view">
        <field name="name">env.location.form</field>
        <field name="model">env.location</field>
        <field name="arch" type="xml">
            <form create="false" edit="false" delete="false">
                <sheet>
                    <group string="Thông tin cơ bản">
                        <field name="name" readonly="1"/>
                        <field name="type" readonly="1"/>
                        <field name="parent_id" readonly="1"/>
                        <field name="code" readonly="1"/>
                        <field name="full_path" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List view -->
    <record id="view_location_list" model="ir.ui.view">
    <field name="name">env.location.list</field>
    <field name="model">env.location</field>
    <field name="arch" type="xml">
        <list>
            <field name="id"/>
            <field name="name"/>
            <field name="type"/>
            <field name="full_path"/>
        </list>
    </field>
    </record>

    <!-- Action -->
    <record id="action_location" model="ir.actions.act_window">
        <field name="name">Nhóm đơn vị hành chính</field>
        <field name="res_model">env.location</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p>Quản lý bảng đơn vị hành chính</p>
        </field>
    </record>
    <menuitem id="menu_location" name="Đơn vị hành chính" parent="menu_location_root" action="action_location"/>
</odoo>