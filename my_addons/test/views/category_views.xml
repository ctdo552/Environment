<odoo>
    <!-- Form view -->
    <record id="view_category_form" model="ir.ui.view">
    <field name="name">env.category.form</field>
    <field name="model">env.category</field>
    <field name="arch" type="xml">
        <form>
        <sheet>
            <group>
            <field name="name"/>
            <field name="description" required="1"/>
            <!-- người tạo -->
            <field name="created_by" readonly="1"/>
            </group>
        </sheet>
        </form>
    </field>
    </record>

    <!-- List view -->
    <record id="view_category_list" model="ir.ui.view">
    <field name="name">env.category.list</field>
    <field name="model">env.category</field>
    <field name="arch" type="xml">
        <list>
        <field name="name"/>
        </list>
    </field>
    </record>

    <!-- Action -->
    <record id="action_category" model="ir.actions.act_window">
    <field name="name">Categories</field>
    <field name="res_model">env.category</field>
    <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_category" name="Categories" parent="menu_test_root" action="action_category"/>

</odoo>