<odoo>
    <!-- Form thêm, sửa -->
    <record id="view_tag_form" model="ir.ui.view">
        <field name="name">env.tag.form</field>
        <field name="model">env.tag</field>
        <field name="arch" type="xml">
        <form>
            <sheet>
            <group>
                <field name="name"/>
                <field name="description" required="1"/>
                <field name="test_id" options="{'no_create': True}"/>
                <!-- người tạo -->
                <field name="created_by" readonly="1"/>
            </group>
            </sheet>
        </form>
        </field>
    </record>

    <!-- hiển thị danh sách -->  
    <record id="view_tag_list" model="ir.ui.view">
        <field name="name">env.tag.list</field>
        <field name="model">env.tag</field>
        <field name="arch" type="xml">
        <list>
            <field name="name"/>
            <field name="test_id"/>
        </list>
        </field>
    </record>

    <record id="action_tag" model="ir.actions.act_window">
        <field name="name">Tags</field>
        <field name="res_model">env.tag</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_tag" name="Tags" parent="menu_test_root" action="action_tag"/>
</odoo>
